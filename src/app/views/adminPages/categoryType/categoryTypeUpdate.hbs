<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">Category Type</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
            <div class="breadcrumbs-top float-md-right">
                <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                    {{!-- must automation this link --}}
                    <li class="breadcrumb-item"><a href="/admin">Home</a>
                    </li>
                    <li class="breadcrumb-item"><a href="/admin/categoryType">Category Type</a>
                    </li>
                    <li class="breadcrumb-item active">Update Category Type
                    </li>
                </ol>
                </div>
            </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Update Category Type</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            {{!-- why have enctype and it's not work --}}
                            <form action="/admin/categoryType/update/{{cateType._id}}?_method=PUT" method="POST" style="margin: 0 20px;">
                                {{#if errText}}
                                    <div class="alert alert-warning" role="alert">
                                        {{errText}}
                                    </div>
                                {{/if}}
                                <div class="form-group">
                                    <label for="exampleInputEmail1">{{labels.label1}}</label>
                                    <input type="text" class="form-control" name="type" placeholder="Enter type of cate" value="{{cateType.type}}" required
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">{{labels.label2}}</label>
                                    <input type="text" class="form-control" name="description" placeholder="Enter Description" value="{{cateType.description}}" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>